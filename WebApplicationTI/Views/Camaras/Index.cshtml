@model IEnumerable<WebApplicationTI.Models.Camaras>

@{
    ViewBag.Title = "Cámaras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid">
            <p>
                @Html.ActionLink("Agregar", "Create", "", new { @class = "btn btn-success" })
            </p>
            <table class="table table-secondary  table-hover border-primary">
                <thead class="table-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Marca)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Modelo)
                        </th>
                        <th>
                            Ubicación
                        </th>
                        <th>
                            No. Serie
                        </th>
                        <th class="text-center">Operaciones</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Modelo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ubicacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoSerie)
                        </td>
                        <td class="text-center">
                            <button type="button" onclick="location.href='@Url.Action("Edit", new { id = item.IdCamara })'" class="btn btn-primary btn-sm px-3" title="Editar">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button type="button" onclick="location.href='@Url.Action("Details", new { id = item.IdCamara})'" class="btn btn-warning btn-sm px-3" title="Detalle">
                                <i class="fas fa-list"></i>
                            </button>
                            <button type="button" onclick="location.href='@Url.Action("Delete", new { id = item.IdCamara })'" class="btn btn-danger btn-sm px-3" title="Eliminar">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </main>
</div>
